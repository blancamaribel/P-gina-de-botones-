function cambiarColor(color) {
    if (color === 'rojo') {
        document.body.style.backgroundColor = '#e60000';
    } else if (color === 'amarillo') {
        document.body.style.backgroundColor = '#ffcc00';
    } else if (color === 'azul') {
        document.body.style.backgroundColor = '#0066cc';
    }
}
